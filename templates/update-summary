PATH=/usr/local/bin:/usr/bin:/bin
export PATH

credential='${zope:username}:${zope:password}'

exec curl \
    --location \
    --output /dev/null \
    --silent \
    --show-error \
    --user "$credential" \
    http://${interfaces:zope}:${ports:zope}/cancerdataexpo/@@updateSummary


